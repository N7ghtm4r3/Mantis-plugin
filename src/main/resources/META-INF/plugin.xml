<idea-plugin>

  <id>com.tecknobit.mantisplugin</id>
  <version>1.0.0</version>
  <name>Mantis</name>
  <vendor email="infotecknobitcompany@gmail.com" url="https://github.com/N7ghtm4r3">Tecknobit</vendor>

  <description>
    <![CDATA[
        Mantis allows you to manage your string resources and translate them automatically.
        Select and add a new set of resources to translate selecting between a multiple languages list available
        Manage the translation of the content of your applications with Mantis!
    ]]>
  </description>

  <change-notes>
    <![CDATA[
            <h1>v. 1.0.0</h1><br>
        ]]>
  </change-notes>

  <depends>com.intellij.modules.platform</depends>

  <actions>
    <action id="createMantisResource" class="com.tecknobit.mantis.CreateResource" text="Create A New Mantis Resource">
      <add-to-group group-id="GenerateGroup" anchor="last"/>
      <keyboard-shortcut keymap="$default" first-keystroke="ctrl L" replace-all="true"/>
    </action>
    <action id="noCreateMantisResource" class="com.tecknobit.mantis.CreateResource" text="Ignore Mantis Resource Creation">
      <add-to-group group-id="GenerateGroup" anchor="last"/>
      <keyboard-shortcut keymap="$default" first-keystroke="ctrl G" replace-all="true"/>
    </action>
  </actions>

</idea-plugin>
